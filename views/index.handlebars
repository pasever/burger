<div class="container" id="first">
	<div class="row">

		<div class="col-lg-12 col-md-12 col-sm-12 text-center">
			<h1> Burger.Love.Com </h1>
		</div>

		<div class="col-xs-6 text-center" class="task">
			<div class="row">

				{{#each burgersObject}}
					{{#unless this.devoured}}

						<div class="col-xs-10 text-center">
							<pre>{{this.id}}. {{this.burger_name}}
					</pre> {{this.Date}}
						</div>

						<div class="col-xs-2 text-center">
							<form class="devour-form">
								<input input type="hidden" class="burger_id" type="text" value= {{this.id}}><br>
								<button type="submit" class="btn btn-info">Devour it!</button>
							</form>
						</div>
					{{/unless}}
				{{/each}}
			</div>
		</div>

		<div class="col-xs-6 text-center" class="task">
			{{#each burgersObject}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>

	</div>
</div>

<div class="container" id="second">
	<div class="row">
		<div class="col-md-2">
		</div>
		<div class="col-md-8 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control"
				placeholder="Type in your order here..."
				name="burger_name" value="">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
		</div>
		<div class="col-md-2">
		</div>
	</div>
</div>
